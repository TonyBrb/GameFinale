@model IEnumerable<Prodotto>
@{
    ViewData["Title"] = "ListaProdotti";
}

<h1>ListaProdotti</h1>

<a asp-action="NuovoProdotto">Aggiungi un nuovo Prodotto</a>
<table class="table table-bordered">
    <tr>
        <th>Id Prodotto</th>
        <th>Nome</th>
        <th>Prezzo</th>
        <th>Quantità</th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td name="id_prodotto">@item.IdProdotto</td>
            <td>@item.Nome</td>
            <td>@item.Prezzo</td>
            <td>@item.Quantita</td>
            <td><a asp-action="AggiungiAlCarrello" asp-route-id="@item.IdProdotto">Agg. al carrello</a></td>
            <td><a asp-action="EliminaProdotto" asp-route-id="@item.IdProdotto">Delete</a></td>
        </tr>
    }
</table>